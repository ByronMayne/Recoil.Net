<UserControl x:Class="TaskList.Components.TaskFilterBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskList.Components"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="120">
    <Border BorderThickness="1" CornerRadius="8" Background="#FFE6E1E1" BorderBrush="#FF969696">
        <DockPanel LastChildFill="True">
            <TextBox DockPanel.Dock="Left" Text="{Binding Filter.Value, UpdateSourceTrigger=PropertyChanged}" BorderThickness="0" Background="{x:Null}" Margin="4"/>
        </DockPanel>
    </Border>
</UserControl>
